<!DOCTYPE html>
<html>

<head>
    <style>

        body {
            background-color: aliceblue;
        }

        div.container {
            width: 100%;
            height: auto;
        }

        header, footer {
            padding: 1em;
            color: black;
            background-color: white;
            clear: left;
            text-align: center;
            align-content: center;
        }

        .buttonOfHome {
            width: 100%;
        }

        .divider {
            width: 5px;
        }

        main {
            width: 100%;
        }

        .container {
            width: auto;
        }

        .carousel {
            position: center;
        }

        .homeButton {
            display: inline;
        }

        nav {
            margin: 0;
            padding: 0;
        }

        .col-md-3 {
            display: inline-grid;
            width: 100%;
        }

        nav ul {
            list-style-type: none;
            padding: 0;
        }

            nav ul a {
                text-decoration: none;
            }
    </style>
</head>

<body>

    <div class="container">

        <br />
        @Html.Partial("_Carousel")
        <br />

        <div class="row">

            <div class="col-md-3">
                <ul>
                    <content style="display:inline-flex; position:center; margin:auto;">
                        <br />

                        @using (Html.BeginForm("ComtecWeb", "Home", FormMethod.Post))
                        {
                            <button id="Website" class="buttonOfHome" style="background-color:#476cac; width: 550px; height:250px; resize:both; color:white;" onclick="ComtecWeb()" value="Website">Comtec Catalogue</button>
                        }
                        @*@using (Html.BeginForm("PrizeDraw", "Home", FormMethod.Post))
                            {
                                <button id="PrizeDraw" style="background-color:#476cac; width: 550px; height:250px; color:white;" onclick="PrizeDraw()" value="Prize Draw">Prize Draw</button>
                            }*@
                        <img class="buttonOfHome" src="~/images/Nexxia/nexxia-audio-solutions-logo.png" width="550" height="250" />
                        @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                        {
                            <button id="SignUp" class="buttonOfHome" style="background-color:#476cac; width: 550px; height:250px; color:white;" onclick="SignUP()" value="Sign Up for a Catalogue!">Sign up for a catalogue</button>
                        }
                    </content>
                </ul>
            </div>

        </div>

    </div>
    <main>

    </main>
</body>
</html>
