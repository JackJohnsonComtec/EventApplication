<!DOCTYPE html>
<html>
<head>
    <style>
        div.container {
            width: 100%;
        }

        header {
            padding: 1em;
            color: white;
            background-color: #476cac;
            clear: left;
            text-align: center;
        }
        label {
        
            float:right;
        
        }
        input {
        
            display:inline-block;
            float:right;
        
        }

        footer {
            padding: 1em;
            color: white;
            background-color: #476cac;
            clear: left;
            text-align: center;
        }


        nav {
            margin: 0;
            padding: 0;
        }

            nav ul {
                list-style-type: none;
                padding: 0;
            }

                nav ul a {
                    text-decoration: none;
                }

        .col-md-3 {
            text-align: center;
            width: inherit;
        }
    </style>
</head>
<body>

    <div class="container">
        <br />
        @Html.Partial("_Carousel")
        <header>
            @{
                ViewData["Title"] = "Prize Draw";
            }

            <h2>@ViewData["Title"]</h2>
            <h3>@ViewData["Message"]</h3>



        </header>



        <div class="col-md-3">
            <h2>Your Details Here</h2>
            <br />
            <ul>
                <content>
                    @using (Html.BeginForm("PrizeDrawEnter", "Home", FormMethod.Post))
                    {

                        <div>
                            <form method="post">
                                <div>

                                    <div>

                                        <div style="margin-left: 33%;">
                                            <div style="float:none">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <label>
                                                                First Name:
                                                                <input type="text" name="firstname" required autocomplete="off" />
                                                            </label>
                                                        </td>
                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;&nbsp;
                                                                Last Name:
                                                                <input type="text" name="lastname" required autocomplete="off" />
                                                            </label>
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td>
                                                            <label>
                                                                Company:
                                                                <input type="text" name="company" required autocomplete="off"/>
                                                            </label>
                                                        </td>
                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;&nbsp;
                                                                Phone Number:
                                                                <input type="tel" name="phoneNumber" required pattern="^[0]\d{9,}$" autocomplete="off"/>
                                                            </label>
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td>
                                                            <label>

                                                                Email Address:
                                                                <input type="email" name="email" required autocomplete="off"/>
                                                            </label>
                                                        </td>

                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;&nbsp;
                                                                Industry:
                                                                <input type="text" name="industry" required autocomplete="off"/>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                        <br />
                                        <br />
                                        
                                    </div>

                                    <button style="font-size:25px;" id="submitbutton" name="submitbutton" onclick="PrizeDrawEnter()" value="subbutton" runat="server">Submit</button>
                                    <br />
                                    <text style="font-size:10px;">By Pressing Submit you are signing up to a Prize Draw hosted by Comtec Cable Accessories Ltd.</text>
                                </div>
                            </form>
                        </div>
                    }
                </content>
            </ul>
        </div>
    </div>

</body>
</html>


