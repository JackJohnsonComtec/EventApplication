<!DOCTYPE html>
<html>
<head>
    <style>
        div.container {
            width: 100%;
        }

        header {
            padding: 1em;
            color: white;
            background-color: #476cac;
            clear: left;
            text-align: center;
        }

        footer {
            padding: 1em;
            color: white;
            background-color: #476cac;
            clear: left;
            text-align: center;
        }


        nav {
            margin: 0;
            padding: 0;
        }

            nav ul {
                list-style-type: none;
                padding: 0;
            }

                nav ul a {
                    text-decoration: none;
                }

        article {
        }

        .productCheck {
            text-align: center;
            padding: 1em;
        }

        .col-md-3 {
            text-align: center;
            width: inherit;
        }

        .productCheck {
            font-size: 18px;
        }

        .checkSetOne {
            display: inline-block;
            width: 200px;
            height: 100px;
            margin: 10px;
            padding: 30px;
            text-align: left;
            vertical-align: top;
            background: #fff;
            box-shadow: 0 5px 10px rgba(0,0,0,.1);
        }
    </style>
</head>
<body>

    <div class="container">

        <br />
        @Html.Partial("_Carousel")
        <header>
            @{
                ViewData["Title"] = "SignUp";
            }

            <h2>@ViewData["Title"]</h2>
            <h3>@ViewData["Message"]</h3>



        </header>


        <div class="col-md-3">
            <h2>Your Details Here</h2>
            <ul>
                <content>
                    @using (Html.BeginForm("SaveDetails", "Home", FormMethod.Post))
                    {
                        <div>
                            <form method="post" class="myForm">
                                <div>
                                    <div style="margin-left: 33%;">
                                        <div style="float:none">
                                            <table>
                                                    <tr>
                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;&nbsp;&nbsp;
                                                                First Name:
                                                                <input type="text" name="firstname" required />
                                                            </label>
                                                        </td>
                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                Last Name:
                                                                <input type="text" name="lastname" required />
                                                            </label>
                                                        </td>
                                                    </tr>
                                                
                                                    <tr>
                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                Company:
                                                                <input type="text" name="company" required />
                                                            </label>
                                                        </td>
                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;
                                                                Phone Number:
                                                                <input type="number" name="phoneNumber" required />
                                                            </label>
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td>
                                                            <label>

                                                                Email Address:
                                                                <input type="text" name="email" required />
                                                            </label>
                                                        </td>
                                                    
                                                        <td>
                                                            <label>
                                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                Industry:
                                                                <input type="text" name="industry" required />
                                                            </label>
                                                        </td>
                                                    </tr>
                                            </table>
                                        </div>
                                    </div>

                                    <section class="productCheck">
                                        <h3>
                                            Products You're Interested In?<br />
                                        </h3>
                                        <content>
                                            <fieldset>
                                                <div class="checkSetOne">
                                                    Structured Cabling
                                                    <input type="checkbox" name="A" runat="server" value="true" />
                                                    <label for="A"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Fibre Optic Cabling
                                                    <input type="checkbox" name="B" runat="server" value="true" />
                                                    <label for="B"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Trunking & Cable Management
                                                    <input type="checkbox" name="C" runat="server" value="true" />
                                                    <label for="C"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Voice Cabling
                                                    <input type="checkbox" name="D" runat="server" value="true" />
                                                    <label for="D"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Cabinets & Accessories
                                                    <input type="checkbox" name="E" runat="server" value="true" />
                                                    <label for="E"></label>
                                                </div>
                                                <br />
                                                <div class="checkSetOne">
                                                    Active Equipment
                                                    <input type="checkbox" name="F" runat="server" value="true" />
                                                    <label for="F"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Tools
                                                    <input type="checkbox" name="G" runat="server" value="true" />
                                                    <label for="G"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Site Equipment
                                                    <input type="checkbox" name="H" runat="server" value="true" />
                                                    <label for="H"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Fixings & Fastenings
                                                    <input type="checkbox" name="I" runat="server" value="true" />
                                                    <label for="I"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Labelling Solutions
                                                    <input type="checkbox" name="J" runat="server" value="true" />
                                                    <label for="J"></label>
                                                </div>
                                                <br />
                                                <div class="checkSetOne">
                                                    External Cabling
                                                    <input type="checkbox" name="K" runat="server" value="true" />
                                                    <label for="K"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Telephony
                                                    <input type="checkbox" name="L" runat="server" value="true" />
                                                    <label for="L"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Test & Measurement
                                                    <input type="checkbox" name="M" runat="server" value="true" />
                                                    <label for="M"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Power, Cabling & Accessories
                                                    <input type="checkbox" name="N" runat="server" value="true" />
                                                    <label for="N"></label>
                                                </div>
                                                <div class="checkSetOne">
                                                    Audio Visual & Coax
                                                    <input type="checkbox" name="O" runat="server" value="true" />
                                                    <label for="O"></label>
                                                </div>
                                            </fieldset>
                                            <br />
                                            <br />
                                            <text style="font-size:20px;">Would you like to be entered into our prize draw?</text>
                                            <input type="checkbox" name="prizeDraw" runat="server" value="true" />
                                            <br />
                                            <br />
                                        </content>


                                    </section>
                                </div>
                                <button style="font-size:25px;" id="submitbutton" name="submitbutton" onclick="SaveDetails()" value="subbutton" runat="server">Submit</button>
                                <br />
                                <text style="font-size:10px;">By Pressing Submit you are signing up to recieve marketing content from Comtec Cable Accessories Ltd.</text>
                            </form>
                        </div>
                    }
                </content>
            </ul>
        </div>
    </div>

</body>
</html>
